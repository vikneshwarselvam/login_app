            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="222*"/>
                <ColumnDefinition Width="11*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="39" Margin="-1,0,0,0" VerticalAlignment="Top" Width="234" Grid.ColumnSpan="2"/>
            <Label Content="Lastname :" HorizontalAlignment="Left" Margin="0,4,0,0" VerticalAlignment="Top" Width="69" Height="26"/>
            <Label x:Name="txt_lastname" Content="" Margin="74,4,10,0" VerticalAlignment="Top" Height="26" Grid.ColumnSpan="2"/>



        </Grid>


        <Grid  HorizontalAlignment="Left" Height="40" Margin="46,225,0,0" VerticalAlignment="Top" Width="233">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="39" Margin="-1.333,0,0,0" VerticalAlignment="Top" Width="234.5"/>
            <Label Content="username :" HorizontalAlignment="Left" Margin="0,4,0,0" VerticalAlignment="Top" Width="69"/>
            <Label x:Name="txt_username" Content="" HorizontalAlignment="Left" Margin="74,4,0,0" VerticalAlignment="Top" Height="26" Width="149"/>


        </Grid>

