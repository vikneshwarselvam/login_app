                <ImageBrush ImageSource="Website-PNG-File-Download-Free.png"/>
            </Label.Background>
        </Label>
        <Label x:Name="label1" Content="Dashboard" HorizontalAlignment="Left" Height="43.5" Margin="44.5,46.5,0,0" VerticalAlignment="Top" Width="153.5" FontSize="22" FontWeight="Bold"/>

